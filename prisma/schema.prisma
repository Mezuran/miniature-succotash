generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  output        = "../prisma_client" 
  
  // 2. Ensure binaries for both your machine and Linux (Streamlit Cloud) are included
  binaryTargets = ["native", "debian-openssl-3.0.x", "debian-openssl-1.1.x"]
  recursive_type_depth = 5
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model Player {
  id     Int    @id @default(autoincrement())
  name   String
  rating Int    @default(0)

  // Relation to rank
  rank    Rank? @relation(fields: [rank_id], references: [id])
  rank_id Int?
}

model Rank {
  id         Int    @id @default(autoincrement())
  name       String @unique
  min_rating Int    @unique

  // Players yang memiliki relasi ke rank tsb.
  players Player[]
}
